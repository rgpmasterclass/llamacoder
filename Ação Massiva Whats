import React, { useState } from 'react';

interface Message {
  message: string;
}

interface Number {
  number: string;
}

const WhatsAppMassMessage = () => {
  const [numbers, setNumbers] = useState<Number[]>([{ number: '' }]);
  const [message, setMessage] = useState<Message>({ message: '' });
  const [intervalTime, setIntervalTime] = useState<number>(1000); // 1 second

  const handleAddNumber = () => {
    setNumbers([...numbers, { number: '' }]);
  };

  const handleRemoveNumber = (index: number) => {
    const newNumbers = [...numbers];
    newNumbers.splice(index, 1);
    setNumbers(newNumbers);
  };

  return (
    <div className="max-w-3xl mx-auto p-4">
      <h1 className="text-3xl font-bold mb-4">WhatsApp Mass Message</h1>
      <div className="mb-4">
        <label className="block text-sm font-medium mb-2">Message:</label>
        <textarea
          className="block w-full p-2 border border-gray-300 rounded-lg"
          value={message.message}
          onChange={(e) => setMessage({ message: e.target.value })}
        />
      </div>
      <div className="mb-4">
        <label className="block text-sm font-medium mb-2">Numbers:</label>
        {numbers.map((number, index) => (
          <div key={index} className="flex items-center mb-2">
            <input
              className="block w-full p-2 border border-gray-300 rounded-lg"
              value={number.number}
              onChange={(e) => {
                const newNumbers = [...numbers];
                newNumbers[index].number = e.target.value;
                setNumbers(newNumbers);
              }}
            />
            {index > 0 && (
              <button
                className="ml-2 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg"
                onClick={() => handleRemoveNumber(index)}
              >
                Remove
              </button>
            )}
          </div>
        ))}
        <button
          className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg"
          onClick={handleAddNumber}
        >
          Add Number
        </button>
      </div>
      <div className="mb-4">
        <label className="block text-sm font-medium mb-2">Interval Time:</label>
        <input
          className="block w-full p-2 border border-gray-300 rounded-lg"
          type="number"
          value={intervalTime / 1000}
          onChange={(e) => setIntervalTime(parseInt(e.target.value) * 1000)}
        />
        <span className="text-sm font-medium">seconds</span>
      </div>
      <button
        className="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg"
      >
        Start Sending
      </button>
    </div>
  );
};

export default WhatsAppMassMessage;
